{
  "manifest_version": 3,
  "name": "TimelyGator Browser Observer",
  "version": "1.0",
  "description": "Monitors browser activity and sends data to the TimelyGator server.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  }
}
